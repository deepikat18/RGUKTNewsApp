<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newswallpaper2"
    tools:context=".ui.activities.AuthActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RGUKT News App"
            android:textSize="32sp"
            android:textColor="#7B1FA2"
            android:textStyle="bold">

        </TextView>


        <ImageView
            android:id="@+id/btnPhoneNoSignIn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="240dp"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:src="@drawable/phonesignin" />

        <ImageView
            android:id="@+id/btnEmailSignIn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:src="@drawable/emailsign" />

        <ImageView
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:src="@drawable/googlesign" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>